# Database Configuration
# Sử dụng tên service 'mysql' thay vì localhost trong Docker
DATABASE_CONNECTION_STRING=Server=mysql;Port=3306;Database=imos;User=imosuser;Password=imospassword;CharSet=utf8mb4;
MYSQL_ROOT_PASSWORD=123456
MYSQL_DATABASE=imos
MYSQL_USER=imosuser
MYSQL_PASSWORD=imospassword

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# MongoDB Configuration
# Sử dụng tên service 'mongodb' thay vì localhost trong Docker
MONGO_CONNECTION_STRING=mongodb://mongodb:27017
MONGO_DATABASE_NAME=custommap_osm_dev
MONGO_LAYER_COLLECTION=layer_data
MONGO_FEATURE_COLLECTION=map_features
MONGO_HISTORY_COLLECTION=map_history
MONGO_LOCATION_COLLECTION=segment_locations

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# Frontend Configuration
FRONTEND_ORIGINS=http://localhost:3000,http://localhost:5173

# SMTP/Mail Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# Stripe Configuration
STRIPE_SECRET=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# PayOS Configuration
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKSUM_KEY=your-payos-checksum-key

# VNPay Configuration
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# MinIO Configuration (Optional - for file storage)
MinIO__Endpoint=minio:9000
MinIO__AccessKey=minioadmin
MinIO__SecretKey=minioadmin
MinIO__UseSSL=false

